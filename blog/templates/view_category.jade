{% extends 'base.jade' %} 
{% block head_title %}Viewing category {{ category.title }}{% endblock %}
{% block title %}{{ category.title }}{% endblock %}

{% block content %}
{% if posts %}
ul
    {% for post in posts %}
    li
        a(href="{{ post.get_absolute_url }}")
            | {{ post.title }}
    {% endfor %}
{% else %}
p
    | There are no posts.
{% endif %}
{% endblock %}